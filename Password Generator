/*Write a program that generates a random even number between 0 and
5000
 */
import java.util.*;
public class p1 {
	public static void main(String[] args) {
     Scanner sc = new Scanner(System.in);
     Random rnd = new Random();
     
     
     System.out.println("Enter a name");
     String name = sc.nextLine();
     
     System.out.println(name);
     
     int a=rnd.nextInt(10)+0; 
     int b=rnd.nextInt(10)+0;
     
     System.out.println("The two digits are "+a+" and "+b);
     
     
     int x=name.length();
     
     
     char q =name.charAt(rnd.nextInt(x));
     char w =name.charAt(rnd.nextInt(x));
     char e =name.charAt(rnd.nextInt(x));
     char r=name.charAt(rnd.nextInt(x));
     char t =name.charAt(rnd.nextInt(x));
     char g =name.charAt(rnd.nextInt(x));
     char f =name.charAt(rnd.nextInt(x));
     
     
     System.out.println("Your password is :");
     System.out.println(""+q+w+e+r+t+g+f+a+b);
  
